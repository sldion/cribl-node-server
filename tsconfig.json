{
    "version": "5.6.3",
    "compilerOptions": {
        "lib": [
            "es5",
            "es6"
        ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "outDir": "build"
    },
    "exclude": [
        "node_modules"
    ]
}